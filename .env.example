#########################################################
# AssemblyAI Configuration (required)
#########################################################
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here

#########################################################
# Zoom RTMS Configuration (required)
#########################################################
# Your Zoom OAuth Client ID
ZM_CLIENT_ID=your_zoom_client_id_here

# Your Zoom OAuth Client Secret  
ZM_CLIENT_SECRET=your_zoom_client_secret_here

# Your Zoom Secret Token for webhook validation
ZOOM_SECRET_TOKEN=your_zoom_secret_token_here

#########################################################
# Server Configuration (optional)
#########################################################
# TCP port for webhook server to listen on (default: 8080)
PORT=8080

# Environment mode
NODE_ENV=development

#########################################################
# Real-time Transcription Configuration (optional)
#########################################################
# Enable/disable real-time transcription (default: true)
# REALTIME_ENABLED=true

# Transcription mode: 'mixed' or 'individual' (default: mixed)
# mixed = all participants in one stream
# individual = separate stream per participant
# REALTIME_MODE=mixed

#########################################################
# Audio Configuration (optional)
#########################################################
# Audio channels: 'mono' or 'multichannel' (default: mono)
# AUDIO_CHANNELS=mono

# Sample rate for audio processing (default: 16000)
# AUDIO_SAMPLE_RATE=16000

# Target chunk duration in milliseconds (default: 100)
# TARGET_CHUNK_DURATION_MS=100

#########################################################
# Async Transcription Configuration (optional)
#########################################################
# Enable/disable async transcription (default: true)
# ASYNC_ENABLED=true

# Note: Async transcription features are configured in index.js
# See ASYNC_CONFIG object for all available options
# Full documentation: https://www.assemblyai.com/docs/api-reference/transcripts/submit

#########################################################
# Optional Advanced Configuration
#########################################################
# Log level for verbosity (error, warn, info, debug, trace)
# LOG_LEVEL=info

# Enable debug mode for detailed logging
# DEBUG_MODE=false

#########################################################
# SSL/TLS Certificates (optional for production)
#########################################################
# Path to SSL certificate file for HTTPS webhook server
# SSL_CERT_PATH=/path/to/cert.pem

# Path to SSL certificate key file for HTTPS webhook server
# SSL_KEY_PATH=/path/to/key.pem

# Path to CA certificate for RTMS connections
# CA_CERT_PATH=/path/to/ca.pem